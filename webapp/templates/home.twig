                        $(function(){
                            // toggle the time button: show/hide controls and set mikorido
                            $(document).on('click', '#time_toggle', function(e){
                                e.preventDefault();
                                var $btn = $(this);
                                var active = $btn.hasClass('btn-success');

                                // If activating but no date selected yet, auto-select 'Ma'
                                if (!active && ($('#mikordatum').val() || '') === '') {
                                    // trigger the 'Ma' button click so mikordatum is set consistently
                                    $('#mass_quick_group .mass-quick[data-value="today"]').trigger('click');
                                }

                                if (active) {
                                    // deactivate
                                    $btn.removeClass('btn-success').addClass('btn-light');
                                    $('#time_controls').hide();
                                    $('#mikortol').val('');
                                } else {
                                    // activate
                                    $btn.removeClass('btn-light').addClass('btn-success');
                                    $('#time_controls').show();
                                    // ensure defaults
                                    if (!$('#mikorido_hour').val()) $('#mikorido_hour').val('10');
                                    if (!$('#mikorido_min').val()) $('#mikorido_min').val('00');
                                    updateMikoridoFromControls();
                                }
                            });

                            // update hidden mikorido when selects change
                            $(document).on('change', '#mikorido_hour, #mikorido_min', function(){
                                updateMikoridoFromControls();
                            });
                        });
                    })(jQuery);
