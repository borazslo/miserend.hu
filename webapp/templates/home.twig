                <script>
                    (function($){
                        function updateHiddenInputs() {
                            
                            // update aggregated rites inputs based on special buttons
                            var ritesShould = [];
                            var ritesMustNot = [];
                            $('.special-toggle').each(function(){
                                var s = Number($(this).data('state')) || 0;
                                var t = $(this).data('type');
                                if (s === 1) ritesShould.push(t);
                                else if (s === 2) ritesMustNot.push(t);
                            });
                            $('#rites_should').val(ritesShould.join(','));
                            $('#rites_must_not').val(ritesMustNot.join(','));
                            
                            // ROMAN_CATHOLIC: include the special itself (if green/red) and also                            
                            var romanShouldArr = [];
                            var romanMustNotArr = [];
                            $('#type_Roman_catholic_Group .type-toggle').not('.special-toggle').each(function(){
                                var s = Number($(this).data('state')) || 0;
                                var t = $(this).data('type');
                                if (s === 1) romanShouldArr.push(t);
                                else if (s === 2) romanMustNotArr.push(t);
                            });
                            $('#types_ROMAN_CATHOLIC_should').val(romanShouldArr.join(','));
                            $('#types_ROMAN_CATHOLIC_must_not').val(romanMustNotArr.join(','));

                            // GREEK_CATHOLIC: include the special itself (if green/red) and also
                            var greekShouldArr = [];
                            var greekMustNotArr = [];
                            $('#type_Greek_catholic_Group .type-toggle').not('.special-toggle').each(function(){
                                var s = Number($(this).data('state')) || 0;
                                var t = $(this).data('type');
                                if (s === 1) greekShouldArr.push(t);
                                else if (s === 2) greekMustNotArr.push(t);
                            });
                            $('#types_GREEK_CATHOLIC_should').val(greekShouldArr.join(','));
                            $('#types_GREEK_CATHOLIC_must_not').val(greekMustNotArr.join(','));

                            // TRADITIONAL: include the special itself (if green/red) and also
                            var traditionalShouldArr = [];
                            var traditionalMustNotArr = [];
                            $('#type_Traditional_Group .type-toggle').not('.special-toggle').each(function(){
                                var s = Number($(this).data('state')) || 0;
                                var t = $(this).data('type');
                                if (s === 1) traditionalShouldArr.push(t);
                                else if (s === 2) traditionalMustNotArr.push(t);
                            });
                            $('#types_TRADITIONAL_should').val(traditionalShouldArr.join(','));
                            $('#types_TRADITIONAL_must_not').val(traditionalMustNotArr.join(','));
                        }

                        function applyState($btn, state) {
                            // state: 0 neutral, 1 success, 2 danger
                            // For special buttons, force only 1 or 2 (no neutral)
                            if ($btn.hasClass('special-toggle') && state === 0) {
                                state = 1;
                            }
                            $btn.data('state', state);
                            $btn.prop('disabled', false);
                            $btn.removeClass('btn-light btn-success btn-danger');
                            if (state === 0) {
                                $btn.addClass('btn-light');
                            } else if (state === 1) {
                                $btn.addClass('btn-success');
                            } else if (state === 2) {
                                $btn.addClass('btn-danger');
                            }
                        }

                        // Update only the special button's own group when its state changes.
                        function updateSpecialGroup($special) {
                            var state = Number($special.data('state')) || 0;
                            var $group = $special.closest('.btn-group');
                            if (state === 2) {
                                // mark group invalid: disable other buttons in this same group
                                $group.addClass('invalid-row');
                                $group.find('.type-toggle').not($special).each(function(){
                                    $(this).prop('disabled', true);
                                    $(this).addClass('disabled');
                                });
                            } else {
                                // valid: enable other buttons in this group
                                $group.removeClass('invalid-row');
                                $group.find('.type-toggle').not($special).each(function(){
                                    $(this).prop('disabled', false);
                                    $(this).removeClass('disabled');
                                });
                            }
                        }
 
                        $(function(){
                            // initialize from any existing hidden inputs (e.g., preserved values)
                            var initMust = ($('#types_must').val() || '').toString().split(',').filter(Boolean);
                            var initMustNot = ($('#types_must_not').val() || '').toString().split(',').filter(Boolean);
                            $('.type-toggle').each(function(){
                                var $btn = $(this);
                                var type = $btn.data('type');
                                if (initMust.indexOf(type) !== -1) applyState($btn, 1);
                                else if (initMustNot.indexOf(type) !== -1) applyState($btn, 2);
                                else {
                                    // If no hidden inputs provided, default special buttons to green, others neutral
                                    if ($btn.hasClass('special-toggle')) {
                                        applyState($btn, 1);
                                    } else {
                                        applyState($btn, 0);
                                    }
                                }
                            });

                            // Ensure specials never remain neutral: convert any special with state 0 to 1
                            $('.special-toggle').each(function(){
                                var $s = $(this);
                                if (Number($s.data('state')) === 0) {
                                    applyState($s, 1);
                                }
                                updateSpecialGroup($s);
                            });

                            // click behavior
                            $(document).on('click', '.type-toggle', function(e){
                                // prevent clicks on disabled buttons
                                if ($(this).prop('disabled')) return;
                                e.preventDefault();
                                var $btn = $(this);
                                var state = Number($btn.data('state')) || 0;

                                if ($btn.hasClass('special-toggle')) {
                                    // toggle between green (1) and red (2) only
                                    var next = (state === 1) ? 2 : 1;
                                    applyState($btn, next);
                                    updateSpecialGroup($btn);
                                } else {
                                    // regular buttons cycle: 0 -> 1 -> 2 -> 0
                                    var next = (state + 1) % 3;
                                    applyState($btn, next);
                                }

                                updateHiddenInputs();
                            });

                            // update hidden inputs on init
                            updateHiddenInputs();
                        });
                    })(jQuery);
                </script>

                <script>
                    (function($){
                        // Single-select behavior for mass quick buttons
                        function pad(n){ return n<10? '0'+n : ''+n; }
                        function formatYMD(d){ return d.getFullYear() + '-' + pad(d.getMonth()+1) + '-' + pad(d.getDate()); }

                        function computeDateForValue(value){
                            var d = new Date();
                            if(value === 'today'){
                                // keep today
                            } else if (value === 'tomorrow'){
                                d.setDate(d.getDate() + 1);
                            } else if (value === 'sunday'){
                                var day = d.getDay(); // 0 = Sunday
                                var diff = (7 - day) % 7; // 0 if today is Sunday
                                d.setDate(d.getDate() + diff);
                            }
                            return formatYMD(d);
                        }

                        function clearMassSelection() {
                            var $group = $('#mass_quick_group');
                            $group.find('.mass-quick').removeClass('btn-success').addClass('btn-light');
                            $group.find('.mass-quick[data-value="date"]').text('Adott napon');
                            $('#mikor').val('');
                            $('#mikordatum').val('');
                            $("#mikortol").val('');
                            $("#time_controls").hide();
                            $('#time_toggle').removeClass('btn-success').addClass('btn-light');
                        }

                        function setMassSelection(value, date) {
                            var $group = $('#mass_quick_group');
                            $group.find('.mass-quick').removeClass('btn-success').addClass('btn-light');

                            var $btn = $group.find('.mass-quick[data-value="' + value + '"]');
                            if ($btn.length) {
                                $btn.removeClass('btn-light').addClass('btn-success');
                            }

                            // Ensure mikor is always a YYYY-MM-DD date
                            var dateStr = date || null;
                            if (!dateStr) {
                                // compute for keywords
                                if (value === 'date') {
                                    // no date yet
                                    dateStr = '';
                                } else {
                                    dateStr = computeDateForValue(value);
                                }
                            }

                            // set title (hover) on the active button to show the resolved date
                            if ($btn.length) {
                                if (dateStr) {
                                    $btn.attr('title', dateStr);
                                } else {
                                    $btn.removeAttr('title');
                                }
                            }

                            if (dateStr) {
                                $('#mikor').val(dateStr);
                                $('#mikordatum').val(dateStr);
                            } else {
                                $('#mikor').val('');
                                $('#mikordatum').val('');
                            }

                            if (value === 'date' && dateStr) {
                                $group.find('.mass-quick[data-value="date"]').text('Adott napon: ' + dateStr);
                            } else if (value === 'date') {
                                $group.find('.mass-quick[data-value="date"]').text('Adott napon');
                            } else {
                                $group.find('.mass-quick[data-value="date"]').text('Adott napon');
                            }
                        }

                        $(function(){
                            // Initialize the hidden datepicker (ensure regional & format)
                            $('#mass_datepicker').datepicker({
                                regional: 'hu',
                                dateFormat: 'yy-mm-dd',
                                onSelect: function(dateText) {
                                    setMassSelection('date', dateText);
                                    $('#mass_datepicker').hide();
                                }
                            });

                            // Adjust quick button labels/visibility based on today's weekday
                            (function(){
                                var today = new Date();
                                var day = today.getDay(); // 0 = Sunday, 6 = Saturday
                                var $group = $('#mass_quick_group');
                                if (day === 0) {
                                    // Today is Sunday -> show "Ma, vasárnap" and hide explicit Sunday button
                                    $group.find('.mass-quick[data-value="today"]').text('Ma, vasárnap');
                                    $group.find('.mass-quick[data-value="sunday"]').hide();
                                } else if (day === 6) {
                                    // Today is Saturday -> "Holnap, vasárnap" on Tomorrow button and hide Sunday button
                                    $group.find('.mass-quick[data-value="tomorrow"]').text('Holnap, vasárnap');
                                    $group.find('.mass-quick[data-value="sunday"]').hide();
                                } else {
                                    // Normal weekdays: ensure defaults
                                    $group.find('.mass-quick[data-value="today"]').text('Ma');
                                    $group.find('.mass-quick[data-value="tomorrow"]').text('Holnap');
                                    $group.find('.mass-quick[data-value="sunday"]').show();
                                }

                                // Set hover titles for the quick buttons so users see the resolved date on hover
                                $group.find('.mass-quick[data-value="today"]').attr('title', computeDateForValue('today'));
                                $group.find('.mass-quick[data-value="tomorrow"]').attr('title', computeDateForValue('tomorrow'));
                                $group.find('.mass-quick[data-value="sunday"]').attr('title', computeDateForValue('sunday'));
                            })();

                            // If the server prefilled values, reflect them
                            var initMikor = ($('#mikor').val() || '').toString();
                            var initMikordatum = ($('#mikordatum').val() || '').toString();

                            if (initMikordatum) {
                                // explicit date present
                                setMassSelection('date', initMikordatum);
                            } else if (initMikor) {
                                // maybe keyword or date
                                var kw = initMikor.trim();
                                if (kw === 'today' || kw === 'tomorrow' || kw === 'sunday') {
                                    var computed = computeDateForValue(kw);
                                    setMassSelection('date', computed);
                                } else if (/^\d{4}-\d{2}-\d{2}$/.test(kw)) {
                                    setMassSelection('date', kw);
                                } else {
                                    // unknown value: leave unselected
                                }
                            }

                            // Click handler: make clicked button the only selected one
                            $(document).on('click', '#mass_quick_group .mass-quick', function(e){
                                e.preventDefault();
                                var val = $(this).data('value');
                                var $this = $(this);
                                var already = $this.hasClass('btn-success');

                                if (already) {
                                    if (val === 'date') {
                                        // if 'Adott napon' is already selected, reopen the datepicker to modify the date
                                        $('#mass_datepicker').show();
                                        $('#mass_datepicker').datepicker('show');
                                        var existing = $('#mikordatum').val();
                                        setMassSelection('date', existing || null);
                                        return;
                                    }
                                    // toggle off for other buttons
                                    clearMassSelection();
                                    return;
                                }

                                if (val === 'date') {
                                    // open the datepicker popup for first-time selection
                                    $('#mass_datepicker').show();
                                    $('#mass_datepicker').datepicker('show');
                                    var existing = $('#mikordatum').val();
                                    if (existing) setMassSelection('date', existing);
                                    else setMassSelection('date', null);
                                } else {
                                    setMassSelection(val, null);
                                }
                            });
                        });
                    })(jQuery);
                </script>

                <script>
                    (function($){
