<div class="panel-group">
    <div class="panel panel-{{ panel ? panel : 'default' }}" {% if id %}id="{{id}}"{% endif %}>
        {% if title %}
            <div class="panel-heading">
                <h4 class="panel-title">
                    {% if collapsible %}
                        <a data-toggle="collapse" href="">
                    {% endif %}
                    {% block title %}{{ title|raw }}{% endblock %}
                    {% if collapsible %}                            
                        </a>
                    {% endif %}
                </h4>
            </div>
        {% endif %}
        
        <div class="panel-collapse {% if collapsible is not same as(true) and collapsible == 'collapsed' %}collapse{% endif %}">
            <div class="panel-body">
            {% block body %}{{ body|raw }}{% endblock %}
            </div>
            {% if footer %}
            <div class="panel-footer">{% block footer %}{% endblock %}</div>
            {% endif %}
        </div>
    </div>
</div>
