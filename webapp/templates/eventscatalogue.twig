{% set columns2 = true  %}
{% extends "layout.twig" %}

{% import "forms.twig" as forms %}

{% set title = "Esemény kifejezések" %}

{% block content %}
{#calendar-app#}<mcal class="calendar-app"><app-root></app-root><script src="/js/mcal/polyfills-FFHMD2TL.js" type="module"></script><script src="/js/mcal/main-YL6EV44S.js" type="module"></script></mcal>
<p class="alap">Miserend periódusok és különleges miseidőpontok beállításánál használható kifejezések és értékeik</p>
<p class="alap">Sorrend: <a href="/eventscatalogue?order=name">név szerint</a> | <a href="/eventscatalogue?order=year%2C+date">időrendben</a>

<FORM ENCTYPE='multipart/form-data' method=post>

	<table class="table table-hover table-condensed table-striped">

	{% for key,input in form %}
		<tr>
			<td style="vertical-align:middle"><strong>
				{% if names[key] != 'new' %}{{ names[key] }}
				{% else %} {{ forms.input( {'name':'new','size':'18'} ) }}
				{% endif %}
			</strong></td>
			{% for year in years %}
				<td>
				{% if form[key][year]['id'] %}{{ forms.input( form[key][year]['id'] ) }}{% endif %}

				{{ forms.input( form[key][year]['input'] ) }}
				</td>
			{% endfor %}
			<td style="vertical-align:middle">
				{% if names[key] != 'new' %}{{ stats[key] }} helyen{% endif %}
			</td>
		</tr>
	
	{% endfor %}
	</table>

<input type="submit" name="save" value="Mentés">
{% endblock %}