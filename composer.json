{
    "name": "miserend.hu/miserend-webapp",
    "description": "Miserend.hu web application",
    "require": {
        "ext-curl": "*",
        "ext-gd": "*",
        "beberlei/doctrineextensions": "^1.3",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "3.3.0",
        "doctrine/orm": "^2.17",
        "illuminate/database": "10.*",
        "phpmailer/phpmailer": "^6.8.0",
        "symfony/console": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/expression-language": "^7.0",
        "symfony/flex": "^2.4",
        "symfony/form": "^7.0",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/http-foundation": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/mailer": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/runtime": "^7.0",
        "symfony/security-bundle": "^7.0",
        "symfony/serializer": "^7.0",
        "symfony/stimulus-bundle": "^2.14",
        "symfony/translation": "^6",
        "symfony/twig-bridge": "^7.0",
        "symfony/twig-bundle": "^7.0",
        "symfony/ux-turbo": "^2.14",
        "symfony/validator": "^7.0",
        "symfony/webpack-encore-bundle": "^2.1",
        "symfony/yaml": "^7.0",
        "tinymce/tinymce": ">= 4",
        "twig/twig": "3.6.*",
        "vlucas/phpdotenv": "5.5.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Legacy/functions.php"
        ],
        "exclude-from-classmap": [
            "**/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.0",
        "friendsofphp/php-cs-fixer": "^3.46",
        "phpunit/phpunit": "9.*",
        "symfony/browser-kit": "^7.0",
        "symfony/debug-bundle": "^7.0",
        "symfony/maker-bundle": "^1.52",
        "symfony/phpunit-bridge": "^7.0",
        "symfony/stopwatch": "^7.0",
        "symfony/var-dumper": "^7.0",
        "symfony/web-profiler-bundle": "^7.0"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "pre-commit": [
            "@cs-fix",
            "@test"
        ],
        "cs-fix":  "php-cs-fixer fix",
        "cs-fix-diff":  "php-cs-fixer fix --dry-run --diff",
        "test": [
            "@test-unit",
            "@test-app"
        ],
        "test-unit": "phpunit --testsuite unit",
        "test-app": "phpunit --testsuite application",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-html var/coverage"
    }
}
